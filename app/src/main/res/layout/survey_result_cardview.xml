<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/transparent"
    android:padding="20dp"
    >


    <androidx.cardview.widget.CardView

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:layout_marginTop="10sp"
        android:elevation="50sp"
        app:cardCornerRadius="15sp"
        android:background="#E8D9D1"

        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >
            <TextView
                android:id="@+id/question_res"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:text="test question"
                android:textAlignment="center"
                android:textColor="#000"
                android:textSize="25sp"
                android:textStyle="bold"
                android:layout_marginTop="15sp"
                />
            <TextView
                android:id="@+id/option1_result"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/question_res"
                android:layout_centerHorizontal="true"
                android:text="Option 1"
                android:textAlignment="center"
                android:textColor="#000"
                android:textSize="20sp"
                android:textStyle="bold"
                android:layout_marginTop="15sp"
                />
            <ProgressBar
                android:id="@+id/pbar1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/option1_result"
                style="?android:attr/progressBarStyleHorizontal"
                android:scrollbarAlwaysDrawHorizontalTrack="true"
                android:paddingStart="35sp"
                android:paddingEnd="35sp"
                android:layout_marginTop="2sp"
                android:progressTint="#5FDF88"
                />
            <TextView
                android:id="@+id/option2_result"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/pbar1"
                android:layout_centerHorizontal="true"
                android:text="Option 1"
                android:textAlignment="center"
                android:textColor="#000"
                android:textSize="20sp"
                android:textStyle="bold"
                android:layout_marginTop="15sp"
                />
            <ProgressBar
                android:id="@+id/pbar2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/option2_result"
                style="?android:attr/progressBarStyleHorizontal"
                android:scrollbarAlwaysDrawHorizontalTrack="true"
                android:paddingStart="35sp"
                android:paddingEnd="35sp"
                android:layout_marginTop="2sp"
                android:progressTint="#5FDF88"
                />
            <TextView
                android:id="@+id/option3_result"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/pbar2"
                android:layout_centerHorizontal="true"
                android:text="Option 3"
                android:textAlignment="center"
                android:textColor="#000"
                android:textSize="20sp"
                android:textStyle="bold"
                android:layout_marginTop="15sp"
                />
            <ProgressBar
                android:id="@+id/pbar3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/option3_result"
                style="?android:attr/progressBarStyleHorizontal"
                android:scrollbarAlwaysDrawHorizontalTrack="true"
                android:paddingStart="35sp"
                android:paddingEnd="35sp"
                android:layout_marginTop="2sp"
                android:progressTint="#5FDF88"
                />
            <TextView
                android:id="@+id/option4_result"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/pbar3"
                android:layout_centerHorizontal="true"
                android:text="Option 4"
                android:textAlignment="center"
                android:textColor="#000"
                android:textSize="20sp"
                android:textStyle="bold"
                android:layout_marginTop="15sp"
                />
            <ProgressBar
                android:id="@+id/pbar4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/option4_result"
                style="?android:attr/progressBarStyleHorizontal"
                android:scrollbarAlwaysDrawHorizontalTrack="true"
                android:paddingStart="35sp"
                android:paddingEnd="35sp"
                android:layout_marginTop="2sp"
                android:progressTint="#5FDF88"
                />
        </RelativeLayout>
    </androidx.cardview.widget.CardView>
</RelativeLayout>